<h1>Articles</h1>

<div id="articles">

  <%= form_tag(articles_path, method: :get) do %>
    <%= text_field_tag :lookup, params[:lookup] %>
    <%= submit_tag 'Search (By Tag/Sub Tag/Title/Contents)' %>
  <% end %>

  <% @articles.each do |article| %>
    <h2>Click to view article: <%= link_to article.title, article %></h2>
    <p>Created On: <%= article.created_at %></p>
    <p>Contents: <%= article.description %></p>
    <p>Tags: <%= article.tag_list %></p>
    <p>Sub Tags: <%= article.sub_tag_list %></p>
    <p><%= link_to "Edit Article", edit_article_path(article) %></p>
  <% end %>
</div>